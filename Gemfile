source 'http://rubygems.org'

gem 'rails', '~> 3.1.0'

gem 'mysql2'

gem 'unicorn'
gem 'json'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails', "~> 3.1.0"
  gem 'coffee-rails', "~> 3.1.0"
  gem 'uglifier'
end

gem 'heroku'

gem 'jquery-rails'

group :production do
  gem "pg"
end

group :test, :development do
  gem "rspec-rails", "~> 2.6"
  gem "factory_girl_rails"
end