<h1>Listing prices</h1>

<% if @location %>
<h2>At Location: <%= @location.name %></h2>
<% end %>

<table>
  <tr>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @prices.each do |price| %>
  <tr>
    <td><%#= price.inv_type.typename %></td>
    <td><%= link_to 'Show', [@location, price].compact %></td>
    <td><%= link_to 'Edit', [:edit, @location, price].compact %></td>
    <td><%= link_to 'Destroy', [@location, price].compact, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Price', new_price_path %>

<% if @location %>
<%= link_to "New Price @ #{@location.name}", [:new, @location, :price] %>
<% end %>
