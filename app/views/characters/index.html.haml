%h1 Listing characters
%table.table
  %tr
    %th
    %th Name
    %th Charid
    %th Pe skill
    %th Industry skill
    %th
    %th
    %th
  - @characters.each do |character|
    %tr
      %td= image_tag(character.portrait_url(:small))
      %td= character.name
      %td= character.charid
      %td= character.pe_skill
      %td= character.industry_skill
      %td= link_to 'Show', character
      %td= link_to 'Edit', edit_character_path(character)
      %td= link_to 'Destroy', character, :confirm => 'Are you sure?', :method => :delete
%br/
= link_to 'New Character', new_character_path
