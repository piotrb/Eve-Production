<h1>Listing characters</h1>

<table>
  <tr>
    <th></th>
    <th>Name</th>
    <th>Charid</th>
    <th>Pe skill</th>
    <th>Industry skill</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @characters.each do |character| %>
  <tr>
    <td><%= image_tag(character.portrait_url(:small)) %></td>
    <td><%= character.name %></td>
    <td><%= character.charid %></td>
    <td><%= character.pe_skill %></td>
    <td><%= character.industry_skill %></td>
    <td><%= link_to 'Show', character %></td>
    <td><%= link_to 'Edit', edit_character_path(character) %></td>
    <td><%= link_to 'Destroy', character, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

