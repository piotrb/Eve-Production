<%= form_for(@blueprint) do |f| %>
  <% if @blueprint.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@blueprint.errors.count, "error") %> prohibited this blueprint from being saved:</h2>

      <ul>
      <% @blueprint.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>

    <div class="clearfix">
      <%= f.hidden_field :typeid %>
      <%= f.label :name %>
      <div class="input">
        <%= text_field_tag "", @blueprint.inv_type.typename, :class => "disabled", :disabled => true %>
      </div>
    </div>

    <div class="clearfix">
      <%= f.label :material_level %>
      <div class="input">
        <%= f.number_field :material_level %>
      </div>
    </div>
    <div class="clearfix">
      <%= f.label :productivity_level %>
      <div class="input">
        <%= f.number_field :productivity_level %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit :class => "btn primary" %>
    </div>

  </fieldset>

<% end %>
